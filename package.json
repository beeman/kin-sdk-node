{
  "name": "kin-sdk-node",
  "version": "1.0.0",
  "description": "Kin SDK for the Node runtime",
  "main": "scripts/bin/index.js",
  "types": "scripts/bin/index.d.ts",
  "scripts": {
    "clean": "rimraf scripts/bin",
    "transpile": "tsc -p scripts",
    "lint": "./node_modules/.bin/tslint -p ./scripts",
    "build": "npm-run-all clean transpile",
    "transpile-tests": "tsc -p tests",
    "test": "npm-run-all transpile transpile-tests jest",
    "jest": "jest --forceExit --runInBand --detectOpenHandles --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinecosystem/kin-sdk-node.git"
  },
  "keywords": [
    "typescript",
    "kin",
    "node"
  ],
  "author": "Kin Ecosystem",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kinecosystem/kin-sdk-node/issues"
  },
  "homepage": "https://github.com/kinecosystem/kin-sdk-node#readme",
  "devDependencies": {
    "@types/eventsource": "^1.1.0",
    "@types/jest": "^24.0.4",
    "@types/nock": "^9.3.1",
    "jest": "^23.6.0",
    "nock": "^10.0.6",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@kinecosystem/kin-base": "^0.20.1",
    "@kinecosystem/kin-sdk": "^0.20.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/tests/preprocessor.js"
    },
    "testMatch": [
      "**/tests/src/**.ts"
    ],
    "testPathIgnorePatterns": [
      ".d.ts"
    ]
  }
}
